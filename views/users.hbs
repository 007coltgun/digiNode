<div class="col-lg-9">
	<div class="row">
		<div class="col-md-8">
			<h2>کاربران <span class="pull-right"><a href="/admin/user/new" class="btn btn-success btn-sm">کاربر جدید</a></span></h2>
			<ul class="list-group">
				{{#each users}}
					<li class="list-group-item">
						<strong>کاربر:</strong> {{this.usersName}} - ({{this.userEmail}})
				  		<span class="pull-right">
                            <strong>نقش: </strong>
                            {{#isAnAdmin this.isAdmin}}
                                <span>مدیر</span>
                            {{else}}
                                <span>کاربر عادی</span>
                            {{/isAnAdmin}}
                            {{#isAnAdmin ../session.isAdmin}}
                                <a href="/admin/user/edit/{{this._id}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></a>
                                <a href="/admin/user/delete/{{this._id}}" onclick="return confirm('آیا از حذف کاربر اطمینان دارید؟')"><span class="glyphicon glyphicon-trash" aria-hidden="true"></a>
                            {{/isAnAdmin}}
						</span>
					</li>
				{{/each}}
			</ul>
		</div>
	</div>
</div>
{{> partials/menu}}


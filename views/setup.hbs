<div class="col-md-offset-4 col-md-4 col-lg-offset-4 col-lg-4" style="padding-top: 50px">
	<form class="form-signin" action="/admin/setup_action" method="post" role="form" data-toggle="validator">
		<h2 class="form-signin-heading text-center">نصب دیجی نود</h2>
        <div class="form-group">
	    	<label for="usersName">نام کاربری *</label>
	    	<input type="text" class="form-control" id="usersName" name="usersName" placeholder="نام کاربری" required>
	  	</div>
		<div class="form-group">
	    	<label for="userEmail">ایمیل *</label>
	    	<input type="email" class="form-control" id="userEmail" name="userEmail" placeholder="ایمیل"  required>
	  	</div>
	  	<div class="form-group">
		    <label for="userPassword">رمز عبور *</label>
		    <input type="password" class="form-control" id="userPassword" name="userPassword" placeholder="رمز عبور" required>
	  	</div>
	  	<div class="form-group">
		    <label for="frm_userPassword_confirm">تاییدیه رمز عبور *</label>
		    <input type="password" data-match="#userPassword" placeholder="تاییدیه رمز عبور" class="form-control" id="frm_userPassword_confirm" name="frm_userPassword_confirm" required>
	  	</div>
		<button class="btn btn-lg btn-primary btn-block" type="submit">اتمام نصب</button>
	</form>
</div>
